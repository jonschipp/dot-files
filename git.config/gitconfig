[user]
	name = Jon Schipp
	email = jonschipp@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	whitespace = trailing-space,space-before-tab,indent-wth-non-tab
[color]
	ui = true
[pull]
	rebase = true
[push]
	default = simple
[sendemail]
        smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = user@org.com
	smtppass = password
	smtpserverport = 587
[commit]
	template = /Users/jonschipp/.gitmessage
[diff "word"]
	textconv = strings
[diff "exif"]
	textconv = exiftool

